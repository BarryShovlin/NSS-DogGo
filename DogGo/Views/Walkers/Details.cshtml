@model DogGo.Models.ViewModels.WalkerFormViewModel

@{ ViewData["Title"] = "Profile"; }
<div>
    <h4 class="mb-4">Walker Profile</h4>

    <section class="container">
        <img style="width:100px;float:left;margin-right:20px"
             src=@Model.walker.ImageUrl />
        <div>
            <label class="font-weight-bold">Name:</label>
            <span>@Model.walker.Name</span>
        </div>
        <div>
            <label class="font-weight-bold">Neighborhood:</label>
            <span>@Model.walker.Neighborhood.Name</span>
        </div>
    </section>

    <hr class="mt-5" />
    <div class="clearfix"></div>

    <div class="row">
        <section class="col-8 container mt-5">
            <h1 class="text-left">Recent Walks</h1>
            <table class="table">
                <thead>
                    <tr>
                        <th scope="col">Date</th>
                        <th scope="col">Client</th>
                        <th scope="col">Duration</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach(Walk walk in Model.Walks)
                    {
                        <tr>
                            <td>@walk.Date</td>
                            <td>@walk.OwnerName</td>
                            <td>@(walk.Duration / 60) minutes</td>
                        </tr>
                    }
                </tbody>
            </table>
            <secion class="col-8 container mt-5">
                <h4 class="text-center">Total Walking Time</h4>
                <div class="text-muted">
                    @Model.Walks
                </div>
            </secion>


        </section>
    </div>
</div>